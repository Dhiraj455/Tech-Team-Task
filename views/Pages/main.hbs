                <input type="hidden" name="price" value="{{itemPrice}}" id="" />
                <button><i class="fas fa-shopping-cart"></i>ADD TO CART</button>
                <br>
                <br>
                <div class="indec">
                    <button type="button" class="dec button">-</button>
                    <input type="text" id="1" value="1" class="input-field" name="count">
                    <button type="button" class="inc button">+</button>
                </div>
                {{!-- <input type="button" value="+" class="icon-shape icon-sm" onclick="increment()">
