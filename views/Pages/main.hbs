<div class="conatiner" style="padding: 0px 30px;">
    <div class="input-group rounded">
        <form class="input-group rounded" action="/search" method="post">
            <input type="search" id="mix" name="name" class="form-control rounded search" onkeydown="hello()"
                placeholder="Search for anything...">
            <button class="btn" style="font-size: 2rem; padding: 0rem 0.75rem; color: #4e351b;" type="submit">
                <div class="fas fa-search" id="menu-btn"></div>
            </button>
        </form>
    </div>
</div>
<br>
<br>
<div class="menu">
    <div class="heading">
        <h1>CAFETERIA</h1>
        <h3>&mdash; MENU &mdash;</h3>
    </div>
    {{#each items}}
    <div class="food-items">
        <img src="{{itemImage}}" alt="">
        <div class="details">
            <div class="details-sub">
                <h5>{{itemName}}</h5>
                <h5 class="price"><i class="fa-solid fa-indian-rupee-sign"></i>{{itemPrice}}</h5>
            </div>
            <p>
                {{itemDescription}}
            </p>
            <form action="/addcart" method="POST">
                <input type="hidden" name="image" value="{{itemImage}}" id="" />
                <input type="hidden" name="name" value="{{itemName}}" id="" />
                <input type="hidden" name="price" value="{{itemPrice}}" id="" />
                <button><i class="fas fa-shopping-cart"></i>ADD TO CART</button>
            </form>
        </div>
    </div>
    {{/each}}
</div>
<script src="/js/main.js"></script>